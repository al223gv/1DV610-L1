{
	"compilerOptions": {
		"target": "es2016",
		"module": "ESNext",
		"moduleResolution": "Node",
		"baseUrl": ".",
		"allowJs": true,
		// "outDir": "./dist",
    "noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@lib/*": ["./src/js/lib/*"]
		}
	}
}
